<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.mapper.UserMapper">

    <insert id="insert">
        INSERT INTO `user`( `name` , age , height , weight , telephone , qq , create_time , user_account , user_password , email)
        VALUES( #{user.name} , #{user.age} , #{user.height} , #{user.weight} , #{user.telephone} , #{user.qq} , #{user.createTime} , #{user.userAccount} , #{user.userPassword} , #{user.email})
    </insert>
    <update id="update">
        UPDATE `user`
        <set>
            <if test="user.name !=null and user.name!=''">
                `name` = #{user.name},
            </if>
            <if test="user.age !=null">
                `age` = #{user.age},
            </if>
            <if test="user.height !=null">
                `height` = #{user.height},
            </if>
            <if test="user.weight !=null">
                `weight` = #{user.weight},
            </if>
            <if test="user.telephone !=null">
                `telephone` = #{user.telephone},
            </if>
            <if test="user.qq !=null">
                `qq` = #{user.qq},
            </if>
            <if test="user.createTime !=null">
                `create_time` = #{user.createTime},
            </if>
            <if test="user.userAccount !=null">
                `user_account` = #{user.userAccount},
            </if>
            <if test="user.userPassword !=null">
                `user_password` = #{user.userPassword},
            </if>
            <if test="user.email !=null">
                `email` = #{user.email},
            </if>
        </set>
        where user_account = #{user.userAccount}
    </update>


    <update id="delete"></update>
    <select id="selectUserInfo" resultType="com.github.entity.User">
        select `name` as name, age as age, height as height,weight as weight,
                telephone as telephone,qq as qq,create_time as createTime,
                user_account as userAccount,user_password as userPassword,email as email
        from `user`
        where user_account = #{user.userAccount}
    </select>

</mapper>